{
    "name": "2fa-mgr",
    "description": "Simple 2FA manager",
    "version": "0.1.3",
    "author": "marzeq",
    "bin": "dist/index.js",
    "license": "GPL-3.0+",
    "dependencies": {
        "@types/totp-generator": "^0.0.4",
        "clipboardy": "2",
        "commander": "^9.2.0",
        "password-prompt": "^1.1.2",
        "totp-generator": "^0.0.13"
    },
    "devDependencies": {
        "@types/node": "^17.0.35",
        "pkg": "^5.7.0",
        "typescript": "^4.5.4"
    },
    "scripts": {
        "compile": "rm -rf dist/ && tsc",
        "start": "yarn compile && node dist/index.js",
        "pkg": "yarn compile && pkg .",
        "prepublish": "yarn compile"
    },
    "pkg": {
        "scripts": "dist/**/*.js",
        "targets": [
            "node16-linux-x64",
            "node16-macos-x64",
            "node16-win-x64"
        ],
        "outputPath": "dist"
    }
}