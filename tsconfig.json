{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": [
            "src/types",
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
    ],
    "include": [
        "src/**/*",
    ]
}